<h2>Edit Historical Landmark</h2>
<td><%= @landmark.name %></td>
<td><%= @landmark.year_completed %></td>


<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <b>Create New Landmark:</b><br><br>
  <label for="name">Name: </label>
  <input type="text" id="name" name="landmark[name]">
  <label for="year_completed">Year: </label>
  <input type="text" id="year_completed" name="landmark[year_completed]">
  <input type="submit" id="submit" value="Edit Landmark">
</form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
